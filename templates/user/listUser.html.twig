{% extends 'base.html.twig' %}


{% block body %}


<div class="row" style="display: flex;align-items: center;justify-content: center;margin-top: 150px;">

    <div class="col-lg-6">

        <div class="card">
            <div class="card-body">
                <a href="{{ path('add_user') }}"><i class="ri-arrow-left-circle-fill" style="font-size: 50px;"></i></a>
                <h5 class="card-title">Liste des utilisateurs</h5>

                <!-- Table with stripped rows -->
                <div style="display: flex; align-items: center;justify-content: center;">
		<table class="table table-striped"  border="1">
                    <thead>
                    <tr> 
                        <th>ID</th>
                        <th>E-mail</th>
                        <th>Nom</th>
                         <th>Prenom</th>
                        <th>Type de Compte</th>
                        <th>Modification</th>
                        <th>Suppression</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for user in b %}
                        <tr>
                            <td>{{user.id}} </td>
                            <td>{{user.email }}</td>
                            <td>{{ user.name}}</td>
                            <td>{{ user.prenom}}</td>
                            <td>{{user.accountType}}</td>
                            <td>
                                <a class="btn btn-danger" href="{{ path('modif_user',{'id':user.id}) }}">Modifier</a>
                            </td>
                            <td>
                                <a class="btn btn-danger" href="{{ path('supp_user',{'id':user.id}) }}">Supprimer</a>
                            </td>
                        </tr>

                    {% endfor %}

                    </tbody>
                </table>
		
	</div>
                <!-- End small tables -->

            </div>
        </div>

    </div>



</div>
{% endblock %}
